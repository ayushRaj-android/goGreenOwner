<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/request_main_layout"
    tools:context=".Activity.RequestsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:id="@+id/profilePic_imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/product_logo"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/dashboard_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requests"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textStyle="bold" />
        <RadioGroup
            android:id="@+id/req_type_radio_grp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/allRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="All"
                android:checked="true"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:layout_margin="2dp"
                android:theme="@style/MyCheckbox"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/todayRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Today"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:theme="@style/MyCheckbox"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/upcomingRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Upcoming"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:theme="@style/MyCheckbox"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/completedRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Completed"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:theme="@style/MyCheckbox"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/search_by_spinner"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_view_req"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:imeOptions="actionSearch"
                app:queryHint="Search"
                app:iconifiedByDefault="false"
                app:queryBackground="@color/colorWhiteTransparent"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/requests_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>