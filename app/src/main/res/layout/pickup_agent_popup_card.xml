<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    app:cardCornerRadius="20dp"
    app:cardForegroundColor="@color/white"
    app:cardElevation="3dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
        <ImageView
            android:id="@+id/pickup_popup_prof_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/pickup_popup_assign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_baseline_directions_bike_24"/>
        <TextView
            android:id="@+id/pickup_popup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pickup_popup_prof_pic"
            android:layout_toStartOf="@id/pickup_popup_assign"
            android:text="Ayush Raj"
            android:layout_marginStart="3dp"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>